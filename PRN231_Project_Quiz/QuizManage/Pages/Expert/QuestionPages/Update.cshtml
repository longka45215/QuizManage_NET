@page
@using Newtonsoft.Json;
@model QuizManage.Pages.Expert.QuestionPages.UpdateModel
@{
}
<div class="container">

    <h2>Update Question</h2>
    <form asp-page="/Expert/QuestionPages/Update" method="post">
        <div class="note">
            <p>Lưu ý: Mỗi khi câu hỏi cần xuống dòng thì phải dùng "/" thay vì xuống dòng để hệ thống có thể đọc được</p>
        </div>
        <div class="mb-3">
            <label for="question" class="form-label">Câu hỏi</label>
            <textarea class="form-control" id="question" name="questionContent" rows="3">@Model.Question.Content</textarea>
        </div>

        <div class="mb-3">
            <label for="answers" class="form-label">Câu trả lời</label>
            @foreach (var answer in Model.Question.Answers)
            {
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="isAnswer" value="@answer.AnswerId" @(answer.IsAnswer.Value ? "checked" : "") />
                    <label class="form-check-label" for="isAnswer">@answer.Content</label>
                </div>
            }
        </div>
        <input type="hidden" name="subjectId" value="@Model.Question.SubjectId" />
        <input type="hidden" name="questionId" value="@Model.Question.QuestionId" />
        <button type="submit" class="btn btn-primary">Cập nhật</button>

    </form>
</div>